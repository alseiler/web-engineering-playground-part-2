{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "jsx": "react",
    "lib": ["es2017", "dom"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["vitest"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "backend/src/**/*", "tests/**/*.*", "vite.config.*", "vitest.config.*", "tests/ui.test.tsx"],
  "exclude": ["node_modules", "dist"]
}
