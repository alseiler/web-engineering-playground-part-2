{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "jsx": "react",
    "lib": ["es2017", "dom"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["vitest"]
  },
  "include": ["frontend/src/**/*.ts", "frontend/src/**/*.tsx", "backend/src/**/*", "frontend/tests/**/*.*", "vite.config.*", "vitest.config.*", "frontend/tests/ui.test.tsx", "frontend/vitest.config.ts", "frontend/vite.config.js"],
  "exclude": ["node_modules", "dist"]
}
